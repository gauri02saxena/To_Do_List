<%- include("header") -%>
<div class="box" id="heading">
  <h1><%=listTitle%></h1>
</div>

<div class="box">
  <% newAddedItems.forEach(function(item){ %>
    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value= <%= item._id %> onChange="this.form.submit()"/>
        <p><%= item.name %></p>
      </div>
   
      <input type="hidden" name="listName" value="<%= listTitle %>">
    </form>
    <% }) %>


  <!-- posting the entry to server at home route -->
  <form action="/" class="item" method="post">
    <input
      type="text"
      name="newItem"
      id="check"
      placeholder="New item"
      autocomplete="off"
    />
    <button type="submit" name="submit" value="<%= listTitle %>">+</button>
  </form>
</div>

<%- include("header") -%>
